<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical" android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_team_player_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="position"
        android:textSize="14sp"
        android:textColor="@color/blackColor"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/textView_team_player_name_and_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name (78)"
        android:textSize="14sp"
        android:textColor="@color/blackColor"
        android:layout_toLeftOf="@+id/textView_team_formation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>